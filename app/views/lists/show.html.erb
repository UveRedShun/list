<main class="listdetail-container">
  <div class="list-info">

    <div class="list-info__list-name">
      <span class="list-info__list_name--form">
      <%= @list.list_name %>
      </span>
    </div>

    <div class="list-info__list-comment">
    <span class="list-info__list-comment--form" >
      <%= @list.list_comment %>
    </span>
    </div>

    <div class="list-info__list-edit">
      <%= link_to "店を追加", new_shop_path(id: @list.id),      class:"list-info__list-edit--form" %>
      <%= link_to '削除',     destroy_lists_path(current_user) , class:"list-info__list-edit--form",
                              method: :delete, data: { confirm: '削除しますか？' } %>
    </div>
  </div>

  <p class="googlemaps">googlemaps</p>

  <sction class="shop-container">
    <div class="shop-wrap">
      <div class="shop-wrap__shop-all">
        <%= link_to image_tag("no-image.png", class:"shop-wrap__shop-all--img"), new_shop_path(id: @list.id) %>
        <%= link_to "店を追加", new_shop_path(id: @list.id), class:"shop-wrap__shop-all--title" %>
      </div>
      <% @shops.each do |s| %>
        <div class="shop-wrap__shop-item">
          <%= link_to image_tag("kaisen.jpeg", class:"shop-wrap__shop-item--img"), "#" %>
          <%= link_to s.shop_name, "#" , class:"shop-wrap__shop-item--name" %>
        </div>
      <% end %>
    </div>
  </section>
  
  <%= link_to "編集", edit_list_path%>
</main>